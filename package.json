{
  "name": "scholar-hub",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "aws-sdk": "^2.661.0",
    "axios": "^0.19.2",
    "dotenv": "^8.2.0",
    "nodemon": "^2.0.2",
    "npm-run-all": "^4.1.5",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-router-dom": "^5.1.2",
    "react-scripts": "3.4.0"
  },
  "devDependencies": {
    "babel-eslint": "^10.0.3",
    "chai": "^4.2.0",
    "eslint": "^6.8.0",
    "mocha": "^7.1.1"
  },
  "scripts": {
    "start": "npm-run-all --parallel start-api start-ui",
    "lint": "npm run lint-api; npm run lint-ui",
    "build": "react-scripts build",
    "setup-db-prod": "node ./lib/db/scripts/create_tables.js",
    "setup-db-dev": "node ./lib/db/scripts/create_tables.js & node ./lib/db/scripts/populate_with_dummy_data.js",
    "start-api": "nodemon ./lib/server.js",
    "start-ui": "react-scripts start",
    "lint-api": "eslint ./lib ./tests --fix",
    "lint-ui": "eslint ./src --fix",
    "test": "npm run test-api",
    "test-api": "mocha test --file tests/setup-tests.js tests/*.test.js",
    "test-ui": "react-scripts test"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "proxy": "http://localhost:3001",
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
